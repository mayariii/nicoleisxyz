---
	import { hoverTypographyAccent, linkHeaderCurrent, linkHeader, typographyAccent } from "../styles/styles";

	export interface Props extends astroHTML.JSX.AnchorHTMLAttributes { }

	const { href, class: className, ...props } = Astro.props;
	const isActive = href === Astro.url.pathname;
---

<a href={href} class:list={[className, isActive ? typographyAccent : '' ]}
	{...props}>
	<slot />
</a>