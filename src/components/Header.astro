---
	import React from 'react'
	import HeaderLink from './HeaderLink.astro';
	import MenuItems from './NavMenuMobile';
	import Logo from './Logo.astro';
	import { ArrowTopRightOnSquareIcon, SunIcon, MoonIcon, Bars2Icon } from '@heroicons/react/24/outline/index.js'
	import { backgroundPrimary, backgroundPrimaryHover, backgroundSecondary, divideDefault, hoverTypographyPrimaryInverted, hoverUIAccent, iconSize4, iconSize6, typographyPrimary, typographySecondary } from '../styles/styles';
	import MenuLink from './MenuLink.astro';

	const pages = [
		{ name: 'writing', href: '/blog/' },
		{ name: 'coding', href: '/portfolio/' },
		{ name: 'working', href: '/cv/' },
		{ name: 'being', href: '/about/' },
		{ name: 'digital gardening', href: 'https://www.nicolesgarden.digital', icon: ArrowTopRightOnSquareIcon }
	]

---

<header>
	<nav class={`shadow z-50 ${backgroundPrimary}`}>
		<div class={`max-w-7xl mx-auto px-2 sm:px-6 lg:px-8`}>
			<div class={`relative flex items-center justify-between h-16`}>
				<div class={`flex-1 flex items-center md:items-stretch justify-start`}>
					<div class={`flex-shrink-0 flex items-center`}>
						<a href="/">
							<Logo />
						</a>
					</div>
					<div class={"hidden md:block ml-6"}>
						<div class={"flex space-x-4 items-center"}>
							{pages.map(page => <HeaderLink href={page.href} target={page.icon ? "_blank" : "_self" }>
								{page.name}{page.icon
								&& <span class="p-1">
									<page.icon className={`inline ${iconSize4} ${typographySecondary}`}
										aria-hidden="true" />
								</span>}</HeaderLink>)}
						</div>
					</div>
				</div>
				<!-- drop down menu -->
				<div id='menu' class={`mt-3 flex flex-col w-full z-50 absolute left-0 top-14 items-center justify-center
					rounded-lg shadow-lg hidden ${backgroundSecondary}`}>
					{pages.map((menuItem) => (
					<MenuLink class={`w-full py-4 px-4 ${typographySecondary} ${hoverTypographyPrimaryInverted}
						${hoverUIAccent}`} href={menuItem.href} target={menuItem.icon ? '_blank' : '_self' }>
						{menuItem.name}
						{menuItem.icon && <span class="p-1">
							<menuItem.icon className={`inline ${iconSize4} ${typographySecondary}
								${hoverTypographyPrimaryInverted}`} aria-hidden="true" />
						</span>}
					</MenuLink>
					))}
				</div>

				<div class="flex justify-between">
					<div class="flex items-center">
						<button type="button" class={`${typographySecondary} ${backgroundPrimaryHover} rounded-lg
							text-sm p-2.5 inline-flex items-center`} aria-label="Toggle between Dark and Light mode"
							data-aw-toggle-color-scheme>
							<SunIcon className={iconSize6} />
						</button>
						<button class={`md:hidden ml-1.5 ${typographySecondary} ${backgroundPrimaryHover} rounded-lg
							text-sm p-2.5 inline-flex items-center transition`} aria-label="Toggle Menu"
							data-aw-toggle-menu>
							<Bars2Icon className={iconSize6} />
						</button>
					</div>
				</div>
			</div>
		</div>
	</nav>
</header>