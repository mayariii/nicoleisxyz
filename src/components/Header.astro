---
	import React from 'react'
	import HeaderLink from './HeaderLink.astro';
	import MenuItems from './NavMenuMobile';
	import Logo from './Logo.astro';
	import { ArrowTopRightOnSquareIcon, SunIcon } from '@heroicons/react/24/outline/index.js'
	import { backgroundPrimary, backgroundPrimaryDark, hoverUIAccent, iconSize4, iconSize6, typographyPrimaryInverted, typographySecondary, UIAccent } from '../styles/styles';

	const pages = [
		{ name: 'writing', href: '/blog/' },
		{ name: 'coding', href: '/portfolio/' },
		{ name: 'working', href: '/cv/' },
		{ name: 'being', href: '/about/' },
		{ name: 'digital gardening', href: 'https://www.nicolesgarden.digital', icon: ArrowTopRightOnSquareIcon }
	]
---

<header>
	<nav class={`shadow z-50 ${backgroundPrimary}`}>
		<div class={`max-w-7xl mx-auto px-2 sm:px-6 lg:px-8`}>
			<div class={`relative flex items-center justify-between h-16`}>
				<MenuItems menuItems={pages} />
				<div class={`flex-1 flex items-center justify-center sm:items-stretch sm:justify-start`}>
					<div class={`flex-shrink-0 flex items-center`}>
						<a href="/">
							<Logo />
						</a>
					</div>
					<div class={"hidden sm:block sm:ml-6"}>
						<div class={"flex space-x-4 items-center"}>
							{pages.map(page => <HeaderLink href={page.href} target={page.icon ? "_blank" : "_self" }>
								{page.name}{page.icon
								&& <span class="p-1">
									<page.icon className={`inline ${iconSize4}
										${typographySecondary}`}aria-hidden="true" />
								</span>}</HeaderLink>)}
						</div>
					</div>
				</div>
				<button type="button"
					class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
					aria-label="Toggle between Dark and Light mode" data-aw-toggle-color-scheme>
					<SunIcon className={iconSize6} />
				</button>
			</div>
		</div>
	</nav>
</header>